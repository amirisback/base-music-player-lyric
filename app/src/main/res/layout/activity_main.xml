<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundWhite">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:padding="@dimen/dimen_big_16dp">

        <Button
            android:id="@+id/btn_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_big_16dp"
            android:background="@drawable/frogo_bg_purple_8dp"
            android:text="Simple Music Player"
            android:textColor="@color/colorBaseWhite" />

        <Button
            android:id="@+id/btn_lyric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frogo_bg_deep_purple_8dp"
            android:text="Lyric Music Player"
            android:textColor="@color/colorBaseWhite" />

    </LinearLayout>

</RelativeLayout>